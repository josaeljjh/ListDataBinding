<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/light_black</item>
        <!-- Since the nav bar is white, we will use dark icons -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="colorPrimaryDark" tools:targetApi="23" tools:ignore="DuplicateDefinition">@color/light_black</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:scaleType">fitXY</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/light_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="colorPrimaryDark" tools:targetApi="23" tools:ignore="DuplicateDefinition">@color/light_black</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomMenuColor" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/morado</item>
    </style>

    <style name="Button.Outlined.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/colorApp</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="strokeColor">@color/colorApp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/colorBlanco</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/colorBlanco</item>
        <item name="android:textColor">@color/gris</item>
        <item name="strokeColor">@color/gris_borde</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
    </style>


    <style name="Button.Orange" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/deep_orange</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/gris_hint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Button.Gray" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/gris_hint</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorApp</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="CardViewStar" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_6sdp</item>
        <item name="cornerSizeTopRight">@dimen/_6sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CardViewEnd" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayEnd</item>
    </style>

    <style name="ShapeAppearanceOverlayEnd" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/_50sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
